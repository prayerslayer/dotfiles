{
  "editor.fontFamily": "Fira Code, Menlo, Monaco, monospace",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.control",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "comments": false,
    "other": false,
    "strings": true
  },
  "editor.cursorStyle": "line",
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.cursorWidth": 3,
  "editor.folding": false,
  "editor.tabCompletion": "on",
  "editor.cursorBlinking": "solid",
  "editor.fontLigatures": true,
  "editor.lineNumbers": "interval",
  "editor.rulers": [
    80,
    120
  ],
  "zenMode.centerLayout": false,
  "workbench.fontAliasing": "auto",
  "workbench.colorCustomizations": {
    "editorBracketMatch.background": "#FF1493",
    "editorBracketMatch.border": "#FF1493",
    "editorRuler.foreground": "#333"
  },
  "git.confirmSync": false,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontFamily": "Fira Code, Menlo, Monaco, monospace",
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/dist/**/*": true,
    "**/node_modules/**/*": true,
    "**/__pycache__/": true,
    "**/*.py.bak": true,
    ".vscode/": true,
    "**/.tox/**": true,
    "**/coverage/**": true
  },
  "search.exclude": {
    "**/node_modules": true
  },
  "trailing-spaces.trimOnSave": true,
  "trailing-spaces.includeEmptyLines": true,
  "window.zoomLevel": 0,
  "typescript.check.npmIsInstalled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": false,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.hideCursorInOverviewRuler": true,
  "search.location": "sidebar",
  "workbench.tree.renderIndentGuides": "none",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.tabSize": 4,
  },
  "editor.fontWeight": "400",
  "editor.minimap.enabled": false,
  "latex-workshop.message.update.show": false,
  "breadcrumbs.enabled": true,
  "workbench.colorTheme": "Default High Contrast",
  "editor.suggest.filterGraceful": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "python.formatting.provider": "black",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": [
        "pdflatex"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "--shell-escape",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.options": {
    "configFile": "./frontend/config/.eslintrc.yml"
  },
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
}
